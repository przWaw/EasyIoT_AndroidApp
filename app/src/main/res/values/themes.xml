<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EasyIoT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorSecondary">@color/main_green</item>
        <item name="colorAccent">@color/main_yellow</item>
        <item name="background">@color/grey</item>
        <item name="color">@color/black</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Logo.Background" parent="Theme.EasyIoT">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="textColor" parent="Theme.EasyIoT">
        <item name="android:textColor">?attr/color</item>
    </style>

    <style name="General.Background" parent="Theme.EasyIoT">
        <item name="android:background">?attr/background</item>
    </style>

    <style name="connectButton" parent="Theme.EasyIoT">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Theme.EasyIoT" parent="Base.Theme.EasyIoT" />
</resources>